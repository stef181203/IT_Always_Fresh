<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    @*<link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">*@

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Playwrite+DE+Grund:wght@100..400&display=swap" rel="stylesheet">

    <style>
        :root {
            --gray-custom: #ebebeb;
            --green-custom: #66A182;
            --darker-blue-custom: #2E4057;
            --blue-custom: #3e5675;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: var(--green-custom);
            font-family: "Nunito", sans-serif;
            font-optical-sizing: auto;
            font-weight: 700;
            font-style: normal;
        }

        .container ul li a {
            color: var(--gray-custom);
        }

            .container ul li a:hover {
                color: lightgray;
            }

        .container.body-content {
            flex: 1;
            width: 80%;
            margin: auto;
            background-color: var(--gray-custom);
            box-shadow: 0 4.5px 9px rgba(0, 0, 0, 0.5);
            padding: 0 0 0 0;
        }

        .navbar {
            background-color: var(--darker-blue-custom);
            box-shadow: 0 4px 7px rgba(0, 0, 0, 0.3);
        }

        .btn-primary-custom {
            background-color: var(--blue-custom);
            color: white;
        }

            .btn-primary-custom:hover {
                background-color: var(--darker-blue-custom);
                color: white;
            }

        .btn-secondary-custom {
            background-color: white;
            border: 0.5px solid lightgray;
        }

            .btn-secondary-custom:hover {
                background-color: var(--green-custom);
                color: white;
            }

        #header-div {
            border-radius: 0.5rem;
        }

        .account-row {
            width: 100%;
            margin: auto;
            border-radius: 0.5rem;
        }

            .account-row > div {
                width: 95%;
                margin: auto;
            }

        footer {
            background-color: var(--darker-blue-custom);
            text-align: center;
            color: white;
        }

        footer .row {
            width: 80%;
            margin: auto;
        }

        footer .row .col-12 {
            background-color: var(--darker-blue-custom);
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-evenly;
        }

        footer .row .col-12 i:hover {
            cursor: pointer;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
        <div class="container" style="width: 80%; margin: auto">
            <img src="~/Images/Logo/logo2.png" alt="Always Fresh" style="max-height: 5rem" />
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between ms-3 me-3">
                <ul class="navbar-nav flex-grow-1">
                    @*<li>
            <a href="@Url.Action("Index", "Home")" class="nav-link">
                <i class="fa-solid fa-home"></i> Home
            </a>*@
                    <li>
                        <h5>
                            <b>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</b>
                        </h5>
                    </li>
                    <li>
                        <h5>
                            <b>@Html.ActionLink("Products", "Index", "Products", new { area = "" }, new { @class = "nav-link" })</b>
                        </h5>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="@Url.Action("Index", "ShoppingCart", new { area = "" })" title="Shopping Cart" class="nav-link me-3 text-white"><i class="fa-solid fa-cart-shopping fa-2x"></i></a>
                    @*@Html.ActionLink("ShoppingCart", "Index", "ShoppingCart", new { area = "" }, new { @class = "nav-link me-2" })*@
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content" style="padding: 1rem 1.5rem 2rem 1.5rem">
        @RenderBody()
    </div>

    <footer>
        <div class="row mt-5 mb-5 justify-content-center">
            <div class="col-12 col-md-6">
                <h5 style="margin-bottom: 0"><b>Contact us:&nbsp;</b></h5>
                <i class="fa-brands fa-instagram fa-2x text-white"></i>
                <i class="fa-brands fa-facebook fa-2x text-white"></i>
                <i class="fa-brands fa-whatsapp fa-2x text-white"></i>
                <i class="fa-solid fa-envelope fa-2x text-white"></i>
            </div>
        </div>
        <p class="mt-5">&copy; @DateTime.Now.Year - Always Fresh</p>
    </footer>


    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>