@model IT_PROJECT.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<main aria-labelledby="title">
    <div id="header-div" class="text-center bg-white py-3">
        <h2><b>@ViewBag.Title</b></h2>
    </div>

    <div class="row account-row bg-white pt-3 pb-3 mt-3 mb-3">
        <div>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="text-center" style="width: 100%">
                    <h4>Create a new account.</h4>
                </div>
                <hr />
                <div class="row m-2 justify-content-center">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row m-2 justify-content-center">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row m-2 justify-content-center">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row m-2 justify-content-center">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-5">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row m-2 justify-content-center">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-5">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row m-2 text-center justify-content-center" style="width: 100%">
                    <div class="col-md-10">
                        <input type="submit" value="Register" class="btn btn-primary-custom" />
                    </div>
                </div>
            }
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
